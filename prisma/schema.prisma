generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Tier {
  id    Int    @id @default(autoincrement())
  title String
  color String
  value Int
  items Int[]
  lists List[] @relation("ListToTier")
}

model Item {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  img         String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt
  createdById Int
  createdBy   User      @relation(fields: [createdById], references: [id])
  rankings    Ranking[]
  lists       List[]    @relation("ItemToList")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  email     String?   @unique
  tokenVersion  Int @default(0)
  lists     List[]
  rankings  Ranking[]
  items     Item[]
}

model List {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  createdById Int
  createdBy   User     @relation(fields: [createdById], references: [id])

  tags        String[]
  items       Item[]   @relation("ItemToList")
  tiers       Tier[]   @relation("ListToTier")
}

model Ranking {
  id        Int      @id @default(autoincrement())
  itemId    Int
  userId    Int
  value     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  item Item @relation(fields: [itemId], references: [id])
  user User @relation(fields: [userId], references: [id])
}

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model List {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  createdBy   String
  tags        String[]
  items       Item[]   @relation("ItemToList")
  tiers       Tier[]   @relation("ListToTier")
}

model Tier {
  id    Int    @id @default(autoincrement())
  title String
  color String
  value Int
  items Int[]
  lists List[] @relation("ListToTier")
}

model Item {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  img         String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt
  createdBy   String
  rankings    Ranking[]
  lists       List[]    @relation("ItemToList")
}

model Ranking {
  id        Int      @id @default(autoincrement())
  itemId    Int
  user      String
  value     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  item      Item     @relation(fields: [itemId], references: [id])
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  password String
}
